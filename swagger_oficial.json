              "examples": {
                "RequestUserAdmin": {
                  "value": {
                    "nome": "admin",
                    "matricula": "9999999",
                    "email": "admin@tuti.com",
                    "password": "tuti@123",
                    "admin": true,
                    "mnt": false
                  }
                },
                "RequestUserMnt": {
                  "value": {
                    "nome": "mnt",
                    "matricula": "88888888",
                    "email": "mnt@tuti.com",
                    "password": "tuti@123",
                    "admin": false,
                    "mnt": true
                  }
                },
                "RequestUserStandard": {
                  "value": {
                    "nome": "standard",
                    "matricula": "0000001",
                    "email": "standard@tuti.com",
                    "password": "tuti@123",
